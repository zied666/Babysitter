<li  {% if app.request.getPathInfo|split('/admin/FrontOffice')|length > 1 %} class="active open"{% endif %}>
    <a href="javascript:void(0)"><i class="clip-screen"></i>
        <span class="title">FrontOffice</span><i class="icon-arrow"></i>
        <span class="selected"></span>
    </a>
    <ul class="sub-menu">
        <li {% if app.request.getPathInfo|split('/admin/FrontOffice/Accueil')|length > 1 %} class="active open"{% endif %} >
            <a href="javascript:void(0)">
                <span class="title">Accueil</span><i class="icon-arrow"></i>
            </a>
            <ul class="sub-menu">
                <li {% if app.request.get('_route')in ['config_front_hoteltunisie_slider'] %} class="open"{% endif %}>
                    <a href="{{ path('config_front_hoteltunisie_slider') }}">
                        <span class="title">Sliders</span>
                    </a>
                </li>
            </ul>

            <ul class="sub-menu">
                <li {% if app.request.get('_route')in ['front_config_programme_topprogramme'] %} class="open"{% endif %}>
                    <a href="{{ path('front_config_programme_topprogramme') }}">
                        <span class="title">Top Programmes</span> </a>
                </li>
            </ul>
            <ul class="sub-menu">
                <li {% if app.request.get('_route')in ['front_config_voyageorganise_topdestination'] %} class="open"{% endif %}>
                    <a href="{{ path('front_config_voyageorganise_topdestination') }}">
                        <span class="title">Top Destinations</span> </a>
                </li>
            </ul>
        </li>
    </ul>
</li>