<li  {% if app.request.getPathInfo|split('/admin/commercial')|length > 1 %} class="active open"{% endif %}>
    <a href="javascript:void(0)"><i class="clip-stats"></i>
	<span class="title">Commercial</span><i class="icon-arrow"></i>
	<span class="selected"></span>
    </a>
    <ul class="sub-menu">
	<li {% if app.request.get('_route') in ['commercial_config_tarif'] %} class="active open"{% endif %} >
	    <a href="javascript:void(0)"><i class="clip-settings"></i>
		<span class="title">Configuration</span><i class="icon-arrow"></i>
	    </a>
	    <ul class="sub-menu">
		<li {% if app.request.get('_route')=='commercial_config_tarif' %} class="open"{% endif %}>
		    <a href="{{ path('commercial_config_tarif') }}">
			<span class="title">Tarif</span>
		    </a>
		</li>
	    </ul>
	</li>
    </ul>
    <ul class="sub-menu">
	<li {% if app.request.get('_route') in ['commercial_fournisseur','commercial_contact'] %} class="active open"{% endif %} >
	    <a href="javascript:void(0)"><i class="clip-user-plus"></i>
		<span class="title">Fourn. & contacts</span><i class="icon-arrow"></i>
	    </a>
	    <ul class="sub-menu">
		<li {% if app.request.get('_route')=='commercial_fournisseur' %} class="open"{% endif %}>
		    <a href="{{ path('commercial_fournisseur') }}">
			<span class="title">Fournisseurs</span>
		    </a>
		</li>
		<li {% if app.request.get('_route')=='commercial_contact' %} class="open"{% endif %}>
		    <a href="{{ path('commercial_contact') }}">
			<span class="title">Contacts</span>
		    </a>
		</li>
	    </ul>
	</li>
    </ul>
    <ul class="sub-menu">
	<li {% if app.request.get('_route') in ['liste_piece'] %} class="active open"{% endif %} >
	    <a href="javascript:void(0)"><i class="clip-banknote"></i>
		<span class="title">Réglements</span><i class="icon-arrow"></i>
	    </a>
	    <ul class="sub-menu">
		<li {% if app.request.get('_route')=='liste_piece' %} class="open"{% endif %}>
		    <a href="{{ path('liste_piece') }}">
			<span class="title">Piéces</span>
		    </a>
		</li>
	    </ul>
	</li>
    </ul>
</li>