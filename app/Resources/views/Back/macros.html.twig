{% macro albumPhoto(image) %}
    <div class="col-md-2 col-sm-4 gallery-img">
        <div class="wrap-image">
            <a class="group1 cboxElement" href="javascript:void(0)">
                <img src="{{ asset(asset(image.getAssetPath)) }}" class="img-responsive"> </a>
            <div class="tools tools-bottom">
                <a href="{{ path('deletephoto',{'id':image.id}) }}" onclick="javascript:return(confirm('Etes-vous certain de vouloir supprimer cette photo ?'))">
                    <i class="clip-close-2"></i>
                    {{ image.showType }}, Ordre : {{ image.ordre }}
                </a>
            </div>
        </div>
    </div>
{% endmacro %}