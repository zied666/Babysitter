{% macro boutton(path,icon,color,texte) %}
    <a href="{{ path }}" class="btn btn-xs {{ color }} tooltips" data-placement="top" data-original-title="{{ texte }}">
        <i class="fa {{ icon }}"></i> </a>
{% endmacro %}
{% macro bouttonBlank(path,icon,color,texte) %}
    <a href="{{ path }}" target="_blank" class="btn btn-xs {{ color }} tooltips" data-placement="top" data-original-title="{{ texte }}">
        <i class="fa {{ icon }}"></i> </a>
{% endmacro %}
{% macro bouttonModal(id,path,icon,color,texte) %}
    <a href="{{ path }}" data-toggle="modal" data-id="{{ id }}" class="btn btn-xs {{ color }} tooltips" data-placement="top" data-original-title="{{ texte }}">
        <i class="fa {{ icon }}"></i> </a>
{% endmacro %}
