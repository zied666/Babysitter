{% extends ":Front:base.html.twig" %}
{% block title %}Register{% endblock %}
{% block breadcrumbs %}
    {{ parent() }}
    <li><a href="{{ path('fos_user_registration_register') }}">{{ block('title') }}</a></li>
{% endblock %}
{% block body %}
    <section id="content" class="gray-area">
        <div class="container">
            {% trans_default_domain 'FOSUserBundle' %}
            <div class="row">
                <div id="main" class="col-sms-6 col-sm-8 col-md-12">
                    <div class="booking-section travelo-box">
                        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                            <h2>{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</h2>
                            {{ form_widget(form._token) }}
                            {#<div class="row">#}
                                {#{{ formulaire.input("col-md-4","Nom & pr√©nom",form.client.nomPrenom,true) }}#}
                                {#{{ formulaire.input("col-md-2","Tel 1",form.client.tel1,true) }}#}
                                {#{{ formulaire.input("col-md-2","Tel 2",form.client.tel2,true) }}#}
                            {#</div>#}
                            {#<div class="row">#}
                                {#{{ formulaire.input("col-md-8","Addresse",form.client.adresse,true) }}#}
                            {#</div>#}
                            <div class="row">
                                {{ formulaire.input("col-md-4","Username",form.username,true) }}
                                {{ formulaire.input("col-md-4","Email",form.email,true) }}
                            </div>
                            <div class="row">
                                {{ formulaire.input("col-md-4","",form.plainPassword,true) }}
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 col-md-5">
                                    <button type="submit" id="_submit" name="_submit" class="full-width btn-large">{{ 'registration.submit'|trans }}</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock  %}
